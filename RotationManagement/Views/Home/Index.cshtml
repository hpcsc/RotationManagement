<script src="~/Scripts/jquery.resize.js"></script>
<script src="~/Scripts/angular-gridster.min.js"></script>
<script src="~/Scripts/apps/rotation-management/rotationMgmtModule.js"></script>
<script src="~/Scripts/apps/rotation-management/controllers/rotationMgmtCtrl.js"></script>
<script src="~/Scripts/apps/rotation-management/services/rotationMgmtDataService.js"></script>
<script src="~/Scripts/apps/rotation-management/directives/scheduler.js"></script>
<script src="~/Scripts/apps/rotation-management/directives/schedulerMain.js"></script>
<script src="~/Scripts/apps/rotation-management/directives/schedulerSide.js"></script>
}

