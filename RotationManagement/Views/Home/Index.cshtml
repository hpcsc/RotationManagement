@{
    ViewBag.Title = "Home Page";
}

<div class="row" data-ng-app="RotationMgmtModule" data-ng-controller="RotationMgmtCtrl" data-ng-init="init()">
    <scheduler data-row-headers="rowHeaders"
               data-column-headers="columnHeaders" 
               data-assignments="assignments"></scheduler>   
    
    <div class="clearfix" ></div>
    <div class="col-xs-12 text-center">
        <button class="btn btn-primary" style="margin-top: 20px" data-ng-click="update()">Update</button>
    </div>     
</div>

