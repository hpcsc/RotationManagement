@{
    ViewBag.Title = "Home Page";
}

<div class="row" data-ng-app="RotationMgmtModule" data-ng-controller="RotationMgmtCtrl">
    <div class="scheduler-side col-xs-2">
        
    </div>
    <div class="scheduler-main">
        <div class="scheduler-main-inner">
            <div class="scheduler-header-container">
                <div class="scheduler-header">January</div>
                <div class="scheduler-header">February</div>
                <div class="scheduler-header">March</div>
                <div class="scheduler-header">April</div>
                <div class="scheduler-header">May</div>
                <div class="scheduler-header">June</div>
            </div>
            <div class="clearfix"></div>
            <div gridster="gridsterOpts">
                <div class="scheduler-table">
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="clearfix"></div>

                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="clearfix"></div>

                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="clearfix"></div>

                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="scheduler-cell"></div>
                    <div class="clearfix"></div>
                </div>                
                <ul>
                    <li gridster-item="item" ng-repeat="item in standardItems"></li>
                </ul>
            </div>
        </div>        
    </div>    
</div>

@section scripts
{    
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/jquery.resize.js"></script>
<script src="~/Scripts/angular-gridster.min.js"></script>
    <script src="~/Scripts/apps/rotation-management/rotationMgmtModule.js"></script>
<script src="~/Scripts/apps/rotation-management/controllers/rotationMgmtCtrl.js"></script>
}

@section styles
{
<link href="~/Content/angular-gridster.min.css" rel="stylesheet" />
}